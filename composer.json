{
  "name": "eureka/eureka-cge",
  "description": "Game Engine For Terminal (console) ",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\GameEngine\\": "./src",
      "Eureka\\GameEngine\\Script\\": "./scripts"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\GameEngine\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },

  "require": {
    "php": "8.1.*||8.2.*",
    "eureka/component-console": "^6.0",
    "ext-mbstring": "*",
    "ext-readline": "*"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpcov": "^9.0",
    "phpunit/phpunit": "^10.2",
    "squizlabs/php_codesniffer": "^3.7"
  }
}
